<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uis.activities.CollectionDetailActivity">

    <ImageView
        android:id="@+id/imgSubjectDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarSubjectDetail"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:alpha="0.7"
        android:background="#fff"
        android:padding="5dp"></FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">


            <android.support.v7.widget.AppCompatButton
                style="@style/btnApply"
                android:onClick="applyWallpaper"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Apply"
                android:textAllCaps="false"
                android:textSize="25dp" />





            <ImageView
                android:id="@+id/imgCollectionDownload"
                android:layout_width="0dp"
                android:onClick="DownloadCollection"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1.3"
                android:src="@drawable/ic_action_download" />


            <ImageView
                android:id="@+id/imgCollectionFavorite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1.3"
                android:onClick="eventFavorite"
                android:src="@drawable/ic_action_star_0" />


        </LinearLayout>


    </FrameLayout>

</FrameLayout>